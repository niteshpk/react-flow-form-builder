[
  {
    "id": "fullName",
    "type": "text",
    "label": "Full Name",
    "isRequired": true,
    "placeholder": "Enter your full name",
    "inputType": "text"
  },
  {
    "id": "email",
    "type": "text",
    "label": "Email Address",
    "isRequired": true,
    "placeholder": "you@example.com",
    "inputType": "email"
  },
  {
    "id": "about",
    "type": "textarea",
    "label": "About Yourself",
    "isRequired": false,
    "placeholder": "Write a short bio..."
  },
  {
    "id": "gender",
    "type": "radio",
    "label": "Gender",
    "isRequired": true,
    "options": ["Male", "Female", "Other"]
  },
  {
    "id": "skills",
    "type": "checkbox",
    "label": "Skills",
    "isRequired": false,
    "options": ["React", "Angular", "Vue", "Node.js"]
  },
  {
    "id": "country",
    "type": "select",
    "label": "Country",
    "isRequired": true,
    "options": ["India", "USA", "UK", "Germany"],
    "multiple": false
  },
  {
    "id": "dob",
    "type": "date",
    "label": "Date of Birth",
    "isRequired": true,
    "minDate": "1900-01-01",
    "maxDate": "2025-12-31"
  },
  {
    "id": "resume",
    "type": "file",
    "label": "Upload Resume",
    "isRequired": true,
    "accept": ".pdf",
    "maxSizeMB": 5,
    "multiple": false
  },
  {
    "id": "intro",
    "type": "static",
    "label": "Welcome Section",
